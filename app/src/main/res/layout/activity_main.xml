<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_loading"
        android:visibility="gone"
        android:layout_centerInParent="true">

    </ProgressBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_main_layout"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/cv_toolbar"
            android:elevation="@dimen/padding_x_large">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_toolbar"
                android:background="@drawable/bg_normal">

                
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/padding_large"
                    app:cardCornerRadius="@dimen/padding_x_large">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/et_get_city_name"
                        android:hint="@string/search_places"
                        android:drawableStart="@drawable/ic_search_24"
                        android:drawablePadding="@dimen/padding_small"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:paddingStart="@dimen/padding_large"
                        android:background="@color/white">

                    </EditText>



                </androidx.cardview.widget.CardView>
                
            </RelativeLayout>




        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_sub_layout"
            android:layout_below="@id/cv_toolbar">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--Change the gradient background-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/iv_weather_bg"
                    android:src="@drawable/bg_normal">

                </ImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_large"
                    android:layout_marginStart="@dimen/text_x_large"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_large"
                        android:text="@string/demo_date">

                    </TextView>

                    <!--The head of the view-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_large"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_day_max_temp"
                            android:layout_weight="3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_large"
                            android:text="@string/day">
                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_day_min_temp"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_large"
                            android:text="@string/day">
                        </TextView>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_large"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_temp"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_super_large"
                            android:text="@string/main_temp">
                        </TextView>

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="@dimen/padding_large"
                            android:layout_marginEnd="@dimen/padding_large"
                            android:id="@+id/iv_weather_icon"
                            android:src="@drawable/ic_temp_holder_24">

                        </ImageView>

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_large"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_feels_like"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_large"
                            android:text="@string/feels_alike">
                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_weather_type"
                            android:layout_weight="3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_large"
                            android:text="@string/weather_type">
                        </TextView>



                    </LinearLayout>



                </LinearLayout>




            </FrameLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/padding_x_large"
                android:layout_marginTop="50dp"
                android:layout_marginRight="@dimen/padding_x_large"
                android:layout_marginBottom="@dimen/padding_x_large"
                android:elevation="@dimen/padding_x_small"
                app:cardCornerRadius="@dimen/padding_x_small"
                app:cardElevation="@dimen/padding_x_small">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_main_bg_above"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/bg_snowy"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_x_small"
                            android:id="@+id/rl_pressure_wrapper">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_x_small">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_temp_holder_24">

                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_pressure"
                                    android:textSize="@dimen/text_x_large"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/default_numbers">

                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_small"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/pressure">

                                </TextView>


                            </LinearLayout>


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_x_small"
                            android:id="@+id/rl_humidity_wrapper">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_x_small">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_temp_holder_24">

                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_humidity"
                                    android:textSize="@dimen/text_x_large"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/default_numbers">

                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_small"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/humidity">

                                </TextView>


                            </LinearLayout>


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_x_small"
                            android:id="@+id/rl_windspeed_wrapper">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_x_small">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_temp_holder_24">

                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_wind_speed"
                                    android:textSize="@dimen/text_x_large"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/default_numbers">

                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_small"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/wind_speed">

                                </TextView>


                            </LinearLayout>


                        </RelativeLayout>









                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_main_bg_below"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/bg_snowy"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_x_small"
                            android:id="@+id/rl_sunrise_wrapper">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_x_small">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_temp_holder_24">

                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_sunrise"
                                    android:textSize="@dimen/text_x_large"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/default_numbers">

                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_small"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/sunrise">

                                </TextView>


                            </LinearLayout>


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_x_small"
                            android:id="@+id/rl_sunset_wrapper">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_x_small">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_temp_holder_24">

                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_sunset"
                                    android:textSize="@dimen/text_x_large"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/default_numbers">

                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_small"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/sunset">

                                </TextView>


                            </LinearLayout>


                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_x_small"
                            android:id="@+id/rl_fahrenheit_wrapper">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_x_small">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/ic_temp_holder_24">

                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/tv_fahrenheit"
                                    android:textSize="@dimen/text_x_large"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/default_numbers">

                                </TextView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_small"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/temperature_in_f">

                                </TextView>


                            </LinearLayout>


                        </RelativeLayout>









                    </LinearLayout>

                </LinearLayout>








            </com.google.android.material.card.MaterialCardView>






        </RelativeLayout>





    </RelativeLayout>

</RelativeLayout>